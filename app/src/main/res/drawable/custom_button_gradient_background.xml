<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
android:color="@color/secondaryBlue">
<item android:id="@android:id/mask">
    <shape android:shape="rectangle">
        <solid android:color="@color/secondaryBlue" />
        <corners android:radius="@dimen/ripple_radius" />
    </shape>
</item>

<item android:id="@android:id/background">
    <shape android:shape="rectangle">
        <corners android:radius="@dimen/button_radius"/>
        <gradient android:angle="180" android:startColor="@color/primaryBlue" android:endColor="@color/secondaryBlue"/>
    </shape>
</item>
</ripple>
